<form action="" method="POST" class="form_delete">
  <h3>Are you sure you want to delete this message ?</h3>
  <div class="message-card delete">
    <div class="message-date">
      <h3><%= message.title %></h3>
      <p><%= name.name %></p>
      <span><%= message.date.toLocaleString().split(',')[0] %></span>
    </div>
    <p><%= message.comment %></p>
  </div>
  <div>
    <input type="hidden" name="id" id="id" value="<%= message._id%>" required>
  </div>
  <button type="submit" class="form-btn">Delete</button>
</form>